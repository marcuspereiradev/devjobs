<div class="row container-forms">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field input-field col s12">
      <i class="material-icons prefix">account_circle</i>
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="field input-field col s12">
      <i class="material-icons prefix">email</i>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field input-field col s12">
      <i class="material-icons prefix">lock</i>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
      <br />
      <em>(leave blank if you don't want to change it)</em>
    </div>
    <div class="field input-field col s12">
      <i class="material-icons prefix">lock</i>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="field input-field col s12">
      <i class="material-icons prefix">lock</i>
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "current-password" %><br />
      <em>(we need your current password to confirm your changes)</em>
    </div>
    <div class="col s12">
      <%= button_tag(class: 'btn waves-effect waves-light actions') do %>
        Update <i class="material-icons right">send</i>
      <% end %>
    </div>
  <% end %>
  <div class="cancel-account col s12">
    <h3 style="color: red">Cancel my account</h3>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn', style: 'background: red' %></p>
    <%= link_to "Back", :back %>
  </div>
</div>
